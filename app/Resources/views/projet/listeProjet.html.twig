{% extends 'baseBackend.html.twig' %}

{% block body %}
    <div class="row">

    {% for projet in listeProjet %}
        <div class="col-md-4 grid-margin stretch-card">
            <div class="card text-center">
                <div class="card-body">
                    <img src="{{ asset('images/'~ projet.imageProjet) }}" class="img-lg rounded-circle mb-2"/>
                    <h4>{{ projet.nomProjet }}</h4>
                    <p class="text-muted">Developer</p>
                    <p class="mt-4 card-text">
                        {{ projet.descriptionProjet }}
                    </p>
                    <button class="btn btn-info btn-sm mt-3 mb-4">Follow</button>
                    <div class="border-top pt-3">
                        <div class="row">
                            <div class="col-4">
                                <h6>5896</h6>
                                <p>Post</p>
                            </div>
                            <div class="col-4">
                                <h6>1596</h6>
                                <p>Followers</p>
                            </div>
                            <div class="col-4">
                                <h6>7896</h6>
                                <p>Likes</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}

{% endblock %}